# longitude\n    latitudes = [location_df.loc[y, \"latitude\"] for y in polygon_pts] # latitude\n    plt.scatter(longitudes, latitudes, s=50, c=\"blue\")\n    plt.fill(longitudes, latitudes, alpha=0.5)\n\n    # plot check point\n    centeroid = polygon_centroid(polygon_pts)\n    plt.scatter(centeroid[1], centeroid[0], s=100, c=\"red\")\n    plt.title(f\"Centroid = {centeroid}\")\n    plt.show()","key":"wWUljvQghI"},{"type":"output","id":"fcXum2DFbk2GxbNStLUNn","data":[],"key":"SwGOyqHOI5"}],"key":"jTFUkjT0jM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"plot_centroid([\"boulder\", \"boston\", \"houston\"],\n               -130, -60, 20, 60)","key":"HNnp8FnCo5"},{"type":"output","id":"ZGEFluJ1rmzhsT8yAPOSE","data":[{"output_type":"display_data","metadata":{},"data":{"text/plain":{"content":"<Figure size 1500x1000 with 2 Axes>","content_type":"text/plain"},"image/png":{"content_type":"image/png","hash":"c63c99e63c3aee72f513579fecba4345","path":"/great-circle-cookbook/_preview/7/build/c63c99e63c3aee72f513579fecba4345.png"}}}],"key":"uU2NDyYYK4"}],"key":"i8nwXxMzCt"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"plot_centroid([\"redwoods\", \"boulder\", \"cape canaveral\", \"houston\"],\n               -130, -60, 20, 60)","key":"y85JlD3CrD"},{"type":"output","id":"XSvgBX58USbPDoPtHx_vk","data":[{"output_type":"display_data","metadata":{},"data":{"text/plain":{"content":"<Figure size 1500x1000 with 2 Axes>","content_type":"text/plain"},"image/png":{"content_type":"image/png","hash":"4d6aee85d3c8addf496f4d07c0d09e72","path":"/great-circle-cookbook/_preview/7/build/4d6aee85d3c8addf496f4d07c0d09e72.png"}}}],"key":"JHLYUbeJgr"}],"key":"fHxzsnm6Ad"},{"type":"block","kind":"notebook-content","children":[{"type":"thematicBreak","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"DcFM89hGfj"}],"key":"pZadLv9n9u"},{"type":"block