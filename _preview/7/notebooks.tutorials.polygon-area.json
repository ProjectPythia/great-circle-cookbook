    plt.fill(longitudes, latitudes, alpha=0.5)\n\n    # plot check point\n    centeroid = polygon_centroid(polygon_pts)\n    plt.scatter(centeroid[1], centeroid[0], s=100, c=\"red\")\n    plt.title(f\"Centroid = {centeroid}\")\n    plt.show()","key":"tk4zPt2LvD"},{"type":"output","id":"7VuvD7_eBi4lvLC-7w9O5","data":[],"key":"NlPxfqbHJP"}],"key":"MgQAN0WFb2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"plot_centroid([\"boulder\", \"boston\", \"houston\"],\n               -130, -60, 20, 60)","key":"zSNroWrGWY"},{"type":"output","id":"f0olDlqtCVxu84qDO016p","data":[{"output_type":"display_data","metadata":{},"data":{"text/plain":{"content":"<Figure size 1500x1000 with 2 Axes>","content_type":"text/plain"},"image/png":{"content_type":"image/png","hash":"c63c99e63c3aee72f513579fecba4345","path":"/great-circle-cookbook/_preview/7/build/c63c99e63c3aee72f513579fecba4345.png"}}}],"key":"GxnLF1foLr"}],"key":"aDxDXCqXaL"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"plot_centroid([\"redwoods\", \"boulder\", \"cape canaveral\", \"houston\"],\n               -130, -60, 20, 60)","key":"OTGhy1EInR"},{"type":"output","id":"C8auycGs4GPP0WTqmPaCx","data":[{"output_type":"display_data","metadata":{},"data":{"text/plain":{"content":"<Figure size 1500x1000 with 2 Axes>","content_type":"text/plain"},"image/png":{"content_type":"image/png","hash":"4d6aee85d3c8addf496f4d07c0d09e72","path":"/great-circle-cookbook/_preview/7/build/4d6aee85d3c8addf496f4d07c0d09e72.png"}}}],"key":"zDrfuTIjMQ"}],"key":"ywG38EqJcS"},{"type":"block","kind":"notebook-content","children":[{"type":"thematicBreak","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"mYQKxWxTJu"}],"key":"WbugHmJSPv"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"ty